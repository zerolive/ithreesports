<center>
	<h1><%= @exam.title %></h1>
	<p><%= youtube_iframe @video %></p>
</center>


<div class="row">
  <div class="small-8 large-centered columns">
		<p><%= @exam.comment if @exam.comment %></p>
  </div>
</div>
<div class="row">
	<div class="small-8 large-centered columns">
		<%= form_tag user_exam_save_path(@exam.id) do %>
			<% @questions.each do |question| %>
				<p><%= label_tag question.title %></p>
					<% question.answer.each do |answer| %>
						<p><%= answer.title %> - <%= radio_button_tag "#{question.id}", "#{answer.id}" %></p>
					<% end %>
			<% end %>
			<center><%= submit_tag t(:evaluate) %></center>
		<% end %>
  </div>
</div>