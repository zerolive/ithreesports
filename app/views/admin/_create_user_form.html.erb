<%= form_for @user, url: create_user_path(@user) do |f|%>
	<%= f.label :name %>
	<%= f.text_field :name, required: true, size: 12 %>
	<%= f.label :password %>
	<%= f.text_field :password, required: true, size: 12 %>
	<%= f.label :level %>
	<%= f.select :level, options_for_select(@levels, @levels) %>
	<%= submit_tag value="#{t(:create_user)}" %>
<% end %>