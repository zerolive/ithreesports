<%= form_for @user, url: create_user_path(@user) do |f|%>
	<%= f.label :email %>
	<%= f.text_field :email, required: true %>
	<%= f.label :name %>
	<%= f.text_field :name, required: true %>
	<%= f.label :password %>
	<%= f.text_field :password_digest, required: true %>
	<%= f.label :level %>
	<%= f.select :level, options_for_select(@levels, @levels) %>
	<%= submit_tag value="#{t(:create_user)}" %>
<% end %>