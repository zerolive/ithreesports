<center><h1><%= t(:edit_exam) %></h1></center>
<div class="row">
	<div class="small-6 large-centered columns">
		<%= form_for @exam, url: update_exam_path(@exam) do |f| %>
			<p>
				<%= f.label t(:position) %>
				<%= f.number_field :position, required: true %>
			</p>
			<p>
				<%= f.label t(:title) %>
				<%= f.text_field :title, required: true %>
			</p>
			<p>
				<%= f.label t(:video) %>
				<%= f.text_field :video, required: true %>
			</p>
			<p>
				<%= f.label t(:level) %>
				<%= f.select :level, options_for_select(@levels, @exam.level) %>
			</p>
			<p>
				<%= f.label t(:dexcription) %>
				<%= f.text_area :comment %>
			</p>
			<center>
				<p><%= submit_tag value="#{t(:edit_exam)}" %></p>
			</center>
		<% end %>
<center><%= link_to t(:back), show_exams_path(@exam.course_id) %></center>
	</div>
</div>