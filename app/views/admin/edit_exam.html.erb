<%= form_for @exam, url: update_exam_path(@exam) do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, required: true %>
	</p>
	<p>
		<%= f.label :video %>
		<%= f.text_field :video %>
	</p>
	<p>
		<%= f.label :level %>
		<%= f.select :level, options_for_select(@levels, @levels) %>
	</p>
	<p>
		<%= f.label :comment %>
		<%= f.text_area :comment %>
	</p>
	<p><%= submit_tag value="#{t(:update_exam)}" %></p>
<% end %>
<%= link_to t(:back), admin_exams_path %>