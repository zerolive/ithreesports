<%= form_for @exam, url: create_exam_path(@exam) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, required: true %>
	<%= f.label :video %>
	<%= f.text_field :video, required: true %>
	<%= f.label :level %>
	<%= f.select :level, options_for_select(@levels, @levels) %>
	<%= f.label :comment %>
	<%= f.text_field :comment %>
	<%= submit_tag value="#{t(:create_exam)}" %>
<% end %>