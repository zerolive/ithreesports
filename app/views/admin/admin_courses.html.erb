<center><h1><%= t(:admin_courses) %></h1></center>
<div class="row">
  <div class="small-6 large-centered columns">
		<%= form_for @course, url: create_course_path do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :image_url %>
			<%= f.text_field :imageurl %>
			<%= f.label :video_url %>
			<%= f.text_field :videourl %>
			<%= f.label :price %>
			<%= f.number_field :price, max: max_price %>
			<%= f.label :description %>
			<%= f.text_area :description %>
			<center><%= f.submit value="#{t(:create_exam)}" %></center>
		<% end %>
	</div>
</div>

<center>
<table>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:image) %></th>
    <th><%= t(:video) %></th>
    <th><%= t(:price) %></th>
    <th><%= t(:edit) %></th>
    <th><%= t(:delete) %></th>
    <th><%= t(:preview) %></th>
    <th><%= t(:files) %></th>
  </tr>
	<%= render @courses %>
</table>
</center>